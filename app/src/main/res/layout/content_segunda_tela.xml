<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hfad.simsampa.SegundaTela"
    tools:showIn="@layout/activity_segunda_tela">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/educacao"
        android:background="@drawable/ic_import_contacts_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/informacoes"
        android:layout_toStartOf="@+id/informacoes" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/transporte"
        android:background="@drawable/ic_directions_bus_black_24dp"
        android:layout_alignTop="@+id/educacao"
        android:layout_toRightOf="@+id/educacao"
         />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_poll_black_24dp"
        android:id="@+id/informacoes"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="750px"
        android:layout_height="690px"
        android:id="@+id/imageView"
        android:background="@drawable/se"
        android:layout_below="@+id/informacoes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subprefeituras"
        android:background="@drawable/ic_rate_review_black_24dp"
        android:layout_above="@+id/educacao"
        android:layout_toRightOf="@+id/educacao"
        android:layout_toEndOf="@+id/educacao" />
</RelativeLayout>
